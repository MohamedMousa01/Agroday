<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.agrounit.controller.applicativo.LoginController"
            prefWidth="400" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #6a11cb, #2575fc);">

    <!-- Box centrale -->
    <VBox alignment="CENTER" spacing="20" layoutX="50" layoutY="100" prefWidth="300" prefHeight="300"
          style="-fx-background-color: rgba(255,255,255,0.85); -fx-background-radius: 20; -fx-padding: 30;">

        <!-- Titolo -->
        <Label text="Benvenuto" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

        <!-- Username -->
        <TextField fx:id="usernameField" promptText="Username"
                   style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 10;"/>

        <!-- Password -->
        <PasswordField fx:id="passwordField" promptText="Password"
                       style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 10;"/>

        <!-- Bottone Login -->
        <Button fx:id="loginButton" text="Login"
                style="-fx-background-color: #6a11cb; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 14px;"
                onAction="#handleLogin"/>

        <!-- Messaggio -->
        <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-weight: bold;"/>
    </VBox>
</AnchorPane>
