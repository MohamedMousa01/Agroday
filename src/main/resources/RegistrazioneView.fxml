<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane style="-fx-background-color: #f4f4f4; -fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controllers.grafico.gui.RegistrazioneGUIController">

    <children>
        <VBox alignment="CENTER" prefWidth="380" spacing="20" style="-fx-padding: 20;">

            <!-- Titolo -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Crea il tuo account Agroday" />

            <!-- ================= DATI UTENTE ================= -->

            <VBox prefHeight="221.0" prefWidth="340.0" spacing="10">

                <TextField fx:id="nomeField" promptText="Nome" />
                <TextField fx:id="cognomeField" promptText="Cognome" />
                <TextField fx:id="usernameField" promptText="Username" />
                <TextField fx:id="emailField" promptText="Email" />
                <PasswordField fx:id="passwordField" promptText="Password" />
                <PasswordField fx:id="confermaPasswordField" promptText="Conferma Password" />
                <TextField fx:id="cittaField" promptText="Citta" />

            </VBox>

            <!-- ================= TIPO UTENTE ================= -->

            <VBox spacing="10">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Tipo di utente" />

                <HBox alignment="CENTER" spacing="15">
                    <RadioButton fx:id="agricoltoreRadio" selected="true" text="Agricoltore">
                  <toggleGroup>
                     <ToggleGroup fx:id="tipoUtenteGroup" />
                  </toggleGroup></RadioButton>

                    <RadioButton fx:id="venditoreRadio" text="Venditore" toggleGroup="$tipoUtenteGroup" />

                    <RadioButton fx:id="consulenteRadio" text="Consulente" toggleGroup="$tipoUtenteGroup" />
                </HBox>
            </VBox>

            <!-- ================= PERSISTENZA ================= -->

            <VBox spacing="10">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Tipo di persistenza" />

                <HBox alignment="CENTER" spacing="15">
                    <RadioButton fx:id="memoryRadio" selected="true" text="Memory (Demo)">
                  <toggleGroup>
                     <ToggleGroup fx:id="persistenceGroup" />
                  </toggleGroup></RadioButton>

                    <RadioButton fx:id="fileRadio" text="File" toggleGroup="$persistenceGroup" />

                    <RadioButton fx:id="dbRadio" text="Database" toggleGroup="$persistenceGroup" />
                </HBox>
            </VBox>

            <!-- ================= AZIONI ================= -->

            <Button fx:id="registratiButton" onAction="#handleRegistrazione" style="-fx-background-color: #28a745; -fx-text-fill: white;                            -fx-font-size: 14px; -fx-padding: 10 50;" text="Registrati" />

            <Hyperlink fx:id="loginLink" text="Hai giÃ  un account? Accedi qui." />

        </VBox>
    </children>
</StackPane>
