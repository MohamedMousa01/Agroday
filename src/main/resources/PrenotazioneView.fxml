        </VBox>
        
        <!-- Spacer -->
        <Region VBox.vgrow="ALWAYS"/>
        
        <!-- Info Box -->
        <VBox fx:id="infoTipoBox" spacing="5" 
              style="-fx-background-color: rgba(255,255,255,0.15); -fx-padding: 15; -fx-background-radius: 12;">
            <Label fx:id="infoTipoLabel" text="Seleziona un tipo di consulenza per vedere i dettagli" 
                   wrapText="true" style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 12px;"/>
        </VBox>
    </VBox>

    <!-- ==================== PANNELLO DESTRO - FORM ==================== -->
    <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" 
                style="-fx-background-color: #f8f9fa; -fx-background: #f8f9fa;"
                HBox.hgrow="ALWAYS">
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #f8f9fa;">
            <padding><Insets top="35" right="50" bottom="35" left="50"/></padding>
            
            <!-- Card Form -->
            <VBox spacing="22" maxWidth="480" 
                  style="-fx-background-color: white; -fx-background-radius: 18; -fx-padding: 35;">
                <effect>
                    <DropShadow color="rgba(0,0,0,0.1)" radius="20" offsetY="5"/>
                </effect>
                
                <!-- Header -->
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Dettagli Appuntamento" style="-fx-text-fill: #2d5a27; -fx-font-weight: bold;">
                        <font><Font size="22"/></font>
                    </Label>
                    <Label text="Compila tutti i campi richiesti" style="-fx-text-fill: #6c757d; -fx-font-size: 13px;"/>
                </VBox>
                
                <Separator style="-fx-background-color: #e9ecef;"/>
                
                <!-- Consulente -->
                <VBox spacing="8">
                    <Label text="ðŸ‘¨â€ðŸ”¬ Consulente" style="-fx-text-fill: #495057; -fx-font-weight: bold; -fx-font-size: 13px;"/>
                    <ComboBox fx:id="consulenteCombo" prefWidth="Infinity" promptText="Seleziona un consulente"
                              style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #dee2e6; -fx-border-radius: 10; -fx-padding: 8;"/>
                </VBox>
                
                <!-- Tipo Consulenza -->
                <VBox spacing="8">
                    <Label text="ðŸ“‹ Tipo di Consulenza" style="-fx-text-fill: #495057; -fx-font-weight: bold; -fx-font-size: 13px;"/>
                    <ComboBox fx:id="tipoConsulenzaCombo" prefWidth="Infinity" promptText="Seleziona il tipo"
                              style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #dee2e6; -fx-border-radius: 10; -fx-padding: 8;"/>
                </VBox>
                
                <!-- Data -->
                <VBox spacing="8">
                    <Label text="ðŸ“† Data" style="-fx-text-fill: #495057; -fx-font-weight: bold; -fx-font-size: 13px;"/>
                    <DatePicker fx:id="dataPicker" prefWidth="Infinity" promptText="Seleziona la data"
                                style="-fx-background-color: #f8f9fa; -fx-background-radius: 10;"/>
                </VBox>
                
                <!-- Orari -->
                <HBox spacing="20">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="ðŸ• Ora Inizio" style="-fx-text-fill: #495057; -fx-font-weight: bold; -fx-font-size: 13px;"/>
                        <HBox spacing="8">
                            <ComboBox fx:id="oraInizioCombo" prefWidth="80" promptText="Ora"
                                      style="-fx-background-color: #f8f9fa; -fx-background-radius: 8;"/>
                            <ComboBox fx:id="minutoInizioCombo" prefWidth="80" promptText="Min"
                                      style="-fx-background-color: #f8f9fa; -fx-background-radius: 8;"/>
                        </HBox>
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="ðŸ•‘ Ora Fine" style="-fx-text-fill: #495057; -fx-font-weight: bold; -fx-font-size: 13px;"/>
                        <HBox spacing="8">
                            <ComboBox fx:id="oraFineCombo" prefWidth="80" promptText="Ora"
                                      style="-fx-background-color: #f8f9fa; -fx-background-radius: 8;"/>
                            <ComboBox fx:id="minutoFineCombo" prefWidth="80" promptText="Min"
                                      style="-fx-background-color: #f8f9fa; -fx-background-radius: 8;"/>
                        </HBox>
                    </VBox>
                </HBox>
                
                <!-- Luogo -->
                <VBox spacing="8">
                    <Label text="ðŸ“ Luogo / Link" style="-fx-text-fill: #495057; -fx-font-weight: bold; -fx-font-size: 13px;"/>
