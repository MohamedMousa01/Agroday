                               style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #dee2e6; -fx-border-radius: 10; -fx-padding: 12; -fx-font-size: 13px;"/>
                </VBox>
                
                <!-- Note -->
                <VBox spacing="8">
                    <Label text="ðŸ“ Note (opzionale)" style="-fx-text-fill: #495057; -fx-font-weight: bold; -fx-font-size: 13px;"/>
