            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="ðŸ¢" style="-fx-font-size: 22px;"/>
                <VBox spacing="2">
                    <Label text="In Ufficio" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px;"/>
                    <Label text="Presso lo studio â€¢ 90 min" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 11px;"/>
                </VBox>
            </HBox>
            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="ðŸŒ¾" style="-fx-font-size: 22px;"/>
                <VBox spacing="2">
                    <Label text="Sul Campo" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px;"/>
