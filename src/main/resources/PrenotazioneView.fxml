                              style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #dee2e6; -fx-border-radius: 10; -fx-padding: 10; -fx-font-size: 13px;"
                              wrapText="true"/>
                </VBox>
                
                <!-- Messaggio -->
                <Label fx:id="messageLabel" wrapText="true" textAlignment="CENTER"
                       style="-fx-font-size: 13px; -fx-padding: 5 0;"/>
                
                <!-- Bottoni -->
                <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="annullaBtn" text="Annulla" onAction="#onAnnulla"
                            prefWidth="150" prefHeight="45"
                            style="-fx-background-color: #f8f9fa; -fx-text-fill: #495057; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-border-color: #dee2e6; -fx-border-radius: 10; -fx-cursor: hand;"/>
                    <Button fx:id="confermaBtn" text="âœ“ Conferma Prenotazione" onAction="#onConferma"
                            prefWidth="200" prefHeight="45"
                            style="-fx-background-color: linear-gradient(to right, #2d5a27, #4a7c43); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;">
                        <effect><DropShadow color="rgba(45,90,39,0.4)" radius="8" offsetY="3"/></effect>
                    </Button>
                </HBox>
            </VBox>
        </VBox>
